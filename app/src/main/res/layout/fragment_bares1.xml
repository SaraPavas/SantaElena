                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.google.android.gms.maps.MapView
                    android:layout_gravity="end"
                    android:id="@+id/mapbares3"
